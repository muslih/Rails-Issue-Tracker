 <div class="col-md-6 col-md-offset-3">   
    <%= form_for(@ticket) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :issue_type %>
            <%= f.text_field :issue_type, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :status %>
            <%= f.text_field :status, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :priority %>
            <%= f.text_field :priority, class: 'form-control' %>
        </div>

        <%= f.fields_for :issues, @ticket.issues.build do |n| %>
            <div class="form-group">
                <%= n.label :description %>
                <%= n.text_field :description, class: 'form-control' %>
                <%= n.hidden_field :user_id, :value => current_user.id %>
            </div>
        <% end %>

        <%= f.submit 'Submit Edit', class: "btn btn-primary form-control" %>
    <% end %>
</div>