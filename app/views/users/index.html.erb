<div class="panel panel-default">
     <div class="panel-heading black-panel-heading">
         <h3 class="textcenter">Users</h3>
     </div>
     <div class="panel-body">
        <div class="row">    
        <%= form_tag users_path, :method => 'get', :class => 'form-group', :role => 'search' do %>
            <div class="form-group col-md-10">
                <%= text_field_tag :search, params[:search], :class => 'form-control', placeholder: 'Search users' %>
            </div>
            <div class="form-group col-md-2">
                 <%= submit_tag "Search", :name => nil, :class => 'btn btn-primary form-control' %>
            </div>
        <% end %>
        </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= link_to user.name, user %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role.capitalize %></td>
                    <td>
                        <a href="/users/<%= user.id %>/edit" class="pull-right" style="padding-right: 5px;">
                            <i class="glyphicon glyphicon-edit"></i>
                        </a>
                    </td>
                </tr>
            <% end %>
            </tbody>
        </table>
     </div>
 </div> 
